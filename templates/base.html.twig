<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('main.css') }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div id="app"></div>
        {% endblock %}
        {% block javascripts %}
            <script>
                {% autoescape 'js' %}
                    window.user = null;
                    {% if app.user %}
                        window.user = {
                            username: "{{ app.user.username }}"
                        };
                    {% endif %}
                {% endautoescape %}
            </script>

            <script src="{{ asset('main.js') }}"></script>
        {% endblock %}
    </body>
</html>
