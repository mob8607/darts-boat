<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Entity\Game" table="games">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <many-to-many field="teams" inversed-by="games" target-entity="App\Entity\Team">
            <join-table name="game_teams">
                <join-columns>
                    <join-column name="idGames" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="idTeams" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-one field="winner" target-entity="App\Entity\Player">
            <join-columns>
                <join-column name="idWinnerPlayers" referenced-column-name="id" nullable="true"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
